<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/item_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:layout_marginTop="35dp"
                android:text="Title:"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/item_description_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/item_title_textView"
                android:layout_below="@+id/item_title_textView"
                android:layout_marginTop="15dp"
                android:text="Description:"/>

            <TextView
                android:id="@+id/item_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/item_description_textView"
                android:layout_below="@+id/item_description_textView"
                android:layout_marginTop="19dp"
                android:text="Price:"/>

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/item_title_textView"
                android:layout_marginStart="10dp"
                android:minHeight="80dp"
                android:minWidth="80dp"
                app:srcCompat="?android:attr/fingerprintAuthDrawable"/>

            <!--<View-->
                <!--android:layout_margin="20dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1px"-->
                <!--android:layout_below="@id/item_price_textView"-->
                <!--android:background="#000000"/>-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>