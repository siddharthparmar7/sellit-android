<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siddharth.sellit.Activities.ItemCard">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/card_imageView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="?android:attr/fingerprintAuthDrawable"/>

            <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/card_imageView"
            android:background="#000000"/>

            <TextView
                android:id="@+id/card_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_imageView"
                android:layout_marginStart="30dp"
                android:layout_marginTop="38dp"
                android:text="Title:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
                android:id="@+id/card_description_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title_textView"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:text="Description: "/>

            <TextView
                android:id="@+id/card_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_description_textView"
                android:layout_marginStart="30dp"
                android:layout_marginTop="45dp"
                android:text="Price:"/>

            <TextView
                android:id="@+id/card_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_description_textView"
                android:layout_marginStart="80dp"
                android:layout_marginTop="45dp"
                android:text="Price:"/>

            <TextView
                android:id="@+id/card_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_description_textView"
                android:layout_marginStart="30dp"
                android:layout_marginTop="75dp"
                android:text="Category:"/>

            <TextView
                android:id="@+id/card_category_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/card_category_label"
                android:layout_below="@id/card_price_textView"
                android:layout_marginStart="70dp"
                android:layout_marginTop="12dp"
                android:text="Category:"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
